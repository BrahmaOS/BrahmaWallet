<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_assets"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/space_small"
        android:paddingBottom="@dimen/space_small"
        android:paddingStart="@dimen/space_normal"
        android:paddingEnd="@dimen/space_normal">
        <ImageView
            android:id="@+id/iv_token_icon"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/icon_normal_size"
            android:layout_height="@dimen/icon_normal_size"
            android:padding="6dp"
            android:src="@drawable/ic_logo"/>

        <TextView
            android:id="@+id/tv_token_name"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_normal"
            android:layout_toEndOf="@id/iv_token_icon"
            android:textColor="@color/color_summary"
            android:textSize="@dimen/font_size_subtitle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_token_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/font_size_title"
                android:text="0"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_token_appro_equal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/space_unit"
                    android:textColor="@color/color_caption"
                    android:text="@string/asymptotic"/>
                <TextView
                    android:id="@+id/tv_token_assets_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_caption"
                    android:text="0"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:orientation="horizontal"
        android:background="@color/horizontal_divider">
    </LinearLayout>
</LinearLayout>
