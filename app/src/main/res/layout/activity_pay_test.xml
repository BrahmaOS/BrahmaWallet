<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextAppearance="@style/ToolbarTitleText"
            app:title="模拟支付场景"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <Button
        android:layout_marginTop="@dimen/space_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quick_pay_brm"
        android:text="快捷支付-BRM"
        android:textSize="@dimen/font_size_body"
        android:onClick="onButtonClick"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quick_pay_btc"
        android:text="快捷支付-BTC"
        android:textSize="@dimen/font_size_body"
        android:onClick="onButtonClick"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quick_pay_btc_eth"
        android:text="快捷支付-BTC-ETH"
        android:textSize="@dimen/font_size_body"
        android:onClick="onButtonClick"
        android:gravity="center"/>

    <Button
        android:layout_marginTop="@dimen/space_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/block_pay_brm"
        android:text="普通支付-BRM"
        android:textSize="@dimen/font_size_body"
        android:onClick="onButtonClick"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/block_pay_btc"
        android:text="普通支付-BTC"
        android:textSize="@dimen/font_size_body"
        android:onClick="onButtonClick"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/block_pay_btc_eth"
        android:text="普通支付-BTC-ETH"
        android:textSize="@dimen/font_size_body"
        android:onClick="onButtonClick"
        android:gravity="center"/>

</LinearLayout>