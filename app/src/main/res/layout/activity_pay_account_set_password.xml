<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@dimen/toolbar_init_elevation"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:titleTextAppearance="@style/ToolbarTitleText"
                app:title="@string/title_pay_set_password"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_toolbar"
            android:background="@color/main_bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/space_small"
                android:paddingBottom="@dimen/space_small"
                android:paddingStart="@dimen/space_normal"
                android:paddingEnd="@dimen/space_normal"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_account_avatar"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_default_account_avatar"
                    android:layout_width="@dimen/icon_pay_size"
                    android:layout_height="@dimen/icon_pay_size"
                    android:scaleType="fitCenter"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/space_normal">
                    <!--<TextView
                        android:id="@+id/tv_account_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/test_network_bg"
                        android:textSize="@dimen/font_size_test_network"
                        android:textColor="@color/color_hint_text"
                        android:layout_marginTop="4dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingStart="@dimen/space_unit"
                        android:paddingEnd="@dimen/space_unit"
                        android:text="@string/account_eth"/>-->
                    <TextView
                        android:id="@+id/tv_account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_size_subtitle"/>
                    <TextView
                        android:id="@+id/tv_account_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/color_hint_text"
                        android:textSize="@dimen/font_size_body"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layout_set_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_large"
                        android:textAlignment="center"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/font_size_subheading"
                        android:text="@string/label_set_payment_password"/>
                    <io.brahmaos.wallet.brahmawallet.view.PassWordLayout
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_larger"
                        app:box_draw_type="rect"
                        app:interval_width="4dp"
                        app:item_height="48dp"
                        app:item_width="48dp"
                        app:pass_inputed_type="stars"
                        app:pass_leng="six" />
                    <Button
                        android:id="@+id/btn_next"
                        style="@style/MainButtonSingle"
                        android:enabled="false"
                        android:layout_marginTop="@dimen/space_largest"
                        android:layout_marginStart="@dimen/icon_large_size"
                        android:layout_marginEnd="@dimen/icon_large_size"
                        android:text="@string/action_next"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/layout_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_large"
                        android:textAlignment="center"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/font_size_subheading"
                        android:text="@string/label_repeat_password"/>
                    <io.brahmaos.wallet.brahmawallet.view.PassWordLayout
                        android:id="@+id/et_repeat_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_larger"
                        app:box_draw_type="rect"
                        app:interval_width="4dp"
                        app:item_height="48dp"
                        app:item_width="48dp"
                        app:pass_inputed_type="stars"
                        app:pass_leng="six" />
                    <TextView
                        android:id="@+id/tv_tip_error_password"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/space_normal"
                        android:layout_height="wrap_content"
                        android:text="@string/tip_repeat_password_error"/>
                    <Button
                        android:id="@+id/btn_set_account"
                        style="@style/MainButtonSingle"
                        android:enabled="false"
                        android:layout_marginTop="@dimen/space_normal"
                        android:layout_marginStart="@dimen/icon_large_size"
                        android:layout_marginEnd="@dimen/icon_large_size"
                        android:text="@string/action_confirm"/>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>
