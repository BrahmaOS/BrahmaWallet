<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.transfer.TransferActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:titleTextAppearance="@style/ToolbarTitleText"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_toolbar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="@dimen/space_normal"
                    android:paddingEnd="@dimen/space_normal"
                    android:paddingTop="@dimen/space_normal"
                    android:paddingBottom="@dimen/space_normal">
                    <ImageView
                        android:id="@+id/iv_account_avatar"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_circle_bg"
                        android:layout_width="@dimen/icon_normal_size"
                        android:layout_height="@dimen/icon_normal_size"
                        android:padding="@dimen/space_smaller"/>
                    <LinearLayout
                        android:layout_toEndOf="@id/iv_account_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_normal"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_account_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_subheading"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tv_account_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_unit"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_change_account"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:textColor="@color/master"
                        android:textSize="@dimen/font_size_body"
                        android:text="@string/action_change_account"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_divider"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/space_normal"
                    android:layout_marginEnd="@dimen/space_normal"
                    android:background="@color/horizontal_divider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/space_normal"
                    android:paddingEnd="@dimen/space_normal"
                    android:background="@color/white"
                    android:paddingTop="@dimen/space_normal"
                    android:paddingBottom="@dimen/space_normal">
                    <TextView
                        android:id="@+id/tv_eth_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETH"/>
                    <TextView
                        android:layout_toEndOf="@id/tv_eth_name"
                        android:layout_marginStart="@dimen/space_smaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_balance"/>
                    <TextView
                        android:id="@+id/tv_eth_balance"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_send_token_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/space_normal"
                    android:paddingEnd="@dimen/space_normal"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/space_normal">
                    <TextView
                        android:id="@+id/tv_send_token_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toEndOf="@id/tv_send_token_name"
                        android:layout_marginStart="@dimen/space_smaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_balance"/>
                    <TextView
                        android:id="@+id/tv_send_token_balance"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@color/main_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/space_normal"
                    android:paddingEnd="@dimen/space_normal"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/customEditTextLineColor"
                            android:layout_marginTop="@dimen/space_smaller"
                            app:hintTextAppearance="@style/customEditTextHint">
                            <EditText
                                android:id="@+id/et_receiver_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/prompt_receiver_address"
                                android:maxLines="2"
                                android:paddingEnd="@dimen/icon_normal_size"
                                android:textSize="@dimen/font_size_body"
                                android:inputType="text"/>
                        </android.support.design.widget.TextInputLayout>
                        <ImageView
                            android:id="@+id/iv_contacts"
                            android:layout_width="@dimen/icon_normal_size"
                            android:layout_height="@dimen/icon_normal_size"
                            android:padding="10dp"
                            android:layout_marginBottom="@dimen/space_unit"
                            android:layout_gravity="end|bottom"
                            android:src="@drawable/icon_contacts"/>
                    </FrameLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/customEditTextLineColor"
                        android:layout_marginTop="@dimen/space_smaller"
                        app:hintTextAppearance="@style/customEditTextHint">
                        <EditText
                            android:id="@+id/et_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_amount"
                            android:textSize="@dimen/font_size_subheading"
                            android:inputType="numberDecimal"
                            android:singleLine="true"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_text_input_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/customEditTextLineColor"
                        android:layout_marginTop="@dimen/space_smaller"
                        app:hintTextAppearance="@style/customEditTextHint">
                        <EditText
                            android:id="@+id/et_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_remark"
                            android:textSize="@dimen/font_size_subheading"
                            android:inputType="text"
                            android:singleLine="true"/>
                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_smaller">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/customEditTextLineColor"
                            app:hintTextAppearance="@style/customEditTextHint">
                            <EditText
                                android:id="@+id/et_gas_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/prompt_gas_price"
                                android:textSize="@dimen/font_size_subheading"
                                android:inputType="number"
                                android:singleLine="true"/>
                        </android.support.design.widget.TextInputLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/space_unit"
                            android:text="@string/unit_gas_price"/>
                    </RelativeLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/customEditTextLineColor"
                        android:layout_marginTop="@dimen/space_smaller"
                        app:hintTextAppearance="@style/customEditTextHint">
                        <EditText
                            android:id="@+id/et_gas_limit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_gas_limit"
                            android:textSize="@dimen/font_size_subheading"
                            android:inputType="number"
                            android:singleLine="true"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_show_transfer_info"
                    style="@style/ButtonSingle"
                    android:layout_marginTop="@dimen/space_normal"
                    android:layout_marginStart="@dimen/space_normal"
                    android:layout_marginEnd="@dimen/space_normal"
                    android:text="@string/action_next"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>
