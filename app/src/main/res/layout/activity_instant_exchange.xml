<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.transfer.InstantExchangeActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:title="@string/title_activity_instant_exchange"
                app:titleTextAppearance="@style/ToolbarTitleText"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:id="@+id/content_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_toolbar"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/space_normal"
                android:paddingEnd="@dimen/space_normal"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="@dimen/space_normal"
                    android:paddingBottom="@dimen/space_normal">
                    <ImageView
                        android:id="@+id/iv_account_avatar"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_circle_bg"
                        android:layout_width="@dimen/icon_normal_size"
                        android:layout_height="@dimen/icon_normal_size"
                        android:padding="@dimen/space_smaller"/>
                    <LinearLayout
                        android:layout_toEndOf="@id/iv_account_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_normal"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_account_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_subheading"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tv_account_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_unit"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_change_account"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:textColor="@color/master"
                        android:textSize="@dimen/font_size_body"
                        android:text="@string/action_change_account"/>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/horizontal_divider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:paddingTop="@dimen/space_normal">
                    <TextView
                        android:id="@+id/tv_eth_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_subheading"
                        android:text="ETH"/>
                    <TextView
                        android:layout_toEndOf="@id/tv_eth_name"
                        android:layout_marginStart="@dimen/space_smaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_subheading"
                        android:text="@string/label_balance"/>
                    <TextView
                        android:id="@+id/tv_eth_balance"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/font_size_subheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_erc20_token_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="2dp"
                    android:paddingTop="@dimen/space_normal">
                    <TextView
                        android:id="@+id/tv_erc20_token_name"
                        android:textSize="@dimen/font_size_subheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toEndOf="@id/tv_erc20_token_name"
                        android:textSize="@dimen/font_size_subheading"
                        android:layout_marginStart="@dimen/space_smaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_balance"/>
                    <TextView
                        android:id="@+id/tv_erc20_token_balance"
                        android:textSize="@dimen/font_size_subheading"
                        android:textColor="@color/black"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/space_normal"
                    android:paddingBottom="@dimen/space_normal"
                    android:paddingStart="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_subheading"
                        android:text="@string/title_current_rate"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_rate_send_token_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_subheading"
                            android:text="1"/>
                        <TextView
                            android:id="@+id/tv_rate_send_token_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_smaller"
                            android:textSize="@dimen/font_size_subheading"
                            android:text="ETH"/>
                        <TextView
                            android:id="@+id/tv_asymptotic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_subheading"
                            android:layout_marginStart="@dimen/space_smaller"
                            android:layout_marginEnd="@dimen/space_smaller"
                            android:text="@string/asymptotic"/>
                        <TextView
                            android:id="@+id/tv_rate_receive_token_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_subheading"/>
                        <TextView
                            android:id="@+id/tv_rate_receive_token_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_subheading"
                            android:layout_marginStart="@dimen/space_smaller"
                            android:text="KNC"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_small"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:paddingEnd="@dimen/space_normal"
                        android:layout_height="wrap_content"
                        android:theme="@style/customEditTextLineColor"
                        app:hintTextAppearance="@style/customEditTextHint">
                        <EditText
                            android:id="@+id/et_send_token_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_send_amount"
                            android:textSize="@dimen/font_size_subheading"
                            android:inputType="text"/>
                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/space_normal"
                        android:layout_marginTop="7.5dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/layout_send_token"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/iv_send_token_icon"
                                android:visibility="gone"
                                android:layout_width="@dimen/toolbar_icon_size"
                                android:layout_height="@dimen/toolbar_icon_size"
                                android:src="@drawable/icon_brm"/>
                            <TextView
                                android:id="@+id/tv_send_token_name"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/toolbar_icon_size"
                                android:layout_marginStart="@dimen/space_smaller"
                                android:layout_marginEnd="@dimen/space_normal"
                                android:gravity="center"
                                android:textSize="@dimen/font_size_subheading"
                                android:text="BRM"/>
                            <ImageView
                                android:layout_width="@dimen/toolbar_icon_size"
                                android:layout_height="@dimen/toolbar_icon_size"
                                android:src="@drawable/ic_arrow_drop"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_below="@id/layout_send_token"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/horizontal_divider"/>
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/toolbar_icon_size"
                    android:layout_height="@dimen/toolbar_icon_size"
                    android:layout_marginTop="@dimen/space_normal"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_circle_arrow_down"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_smaller"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/space_normal"
                        android:theme="@style/customEditTextLineColor"
                        app:hintTextAppearance="@style/customEditTextHint">
                        <EditText
                            android:id="@+id/et_receive_token_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_subheading"
                            android:hint="@string/prompt_receive_amount"
                            android:inputType="text"/>
                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/space_normal"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/layout_receive_token"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/iv_receive_token_icon"
                                android:visibility="gone"
                                android:layout_width="@dimen/toolbar_icon_size"
                                android:layout_height="@dimen/toolbar_icon_size"
                                android:src="@drawable/icon_brm"/>
                            <TextView
                                android:id="@+id/tv_receive_token_name"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/toolbar_icon_size"
                                android:layout_marginStart="@dimen/space_smaller"
                                android:layout_marginEnd="@dimen/space_smaller"
                                android:gravity="center"
                                android:textSize="@dimen/font_size_subheading"
                                android:text="ETH"/>
                            <ImageView
                                android:layout_width="@dimen/toolbar_icon_size"
                                android:layout_height="@dimen/toolbar_icon_size"
                                android:src="@drawable/ic_arrow_drop"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_below="@id/layout_receive_token"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/horizontal_divider"/>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_normal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/customEditTextLineColor"
                        app:hintTextAppearance="@style/customEditTextHint">
                        <EditText
                            android:id="@+id/et_gas_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_gas_price"
                            android:textSize="@dimen/font_size_subheading"
                            android:inputType="number"
                            android:singleLine="true"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/space_unit"
                        android:text="@string/unit_gas_price"/>
                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/customEditTextLineColor"
                    android:layout_marginTop="@dimen/space_normal"
                    app:hintTextAppearance="@style/customEditTextHint">
                    <EditText
                        android:id="@+id/et_gas_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_gas_limit"
                        android:textSize="@dimen/font_size_subheading"
                        android:inputType="number"
                        android:singleLine="true"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_show_transfer_info"
                    style="@style/ButtonSingle"
                    android:layout_marginTop="@dimen/space_larger"
                    android:layout_marginBottom="@dimen/space_larger"
                    android:text="@string/action_instant_exchange"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>
