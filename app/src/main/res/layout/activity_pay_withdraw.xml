<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextAppearance="@style/ToolbarTitleText"
                app:title="@string/title_pay_account_withdraw"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/loading_pbar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_toolbar"
                android:background="@color/main_bg"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_normal"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_pay_account_avatar"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/icon_normal_size"
                        android:layout_height="@dimen/icon_normal_size"
                        android:src="@drawable/ic_default_account_avatar"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_normal"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_account_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_subtitle"
                            android:textColor="@color/color_primary_text"/>
                        <TextView
                            android:id="@+id/tv_account_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_secondary_text"
                            android:layout_marginTop="@dimen/space_unit"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/layout_choose_token"
                    android:layout_marginTop="@dimen/space_normal"
                    android:background="@color/white"
                    android:paddingStart="@dimen/space_normal"
                    android:paddingEnd="@dimen/space_normal"
                    android:paddingTop="@dimen/space_normal"
                    android:paddingBottom="@dimen/space_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_secondary_text"
                        android:textSize="@dimen/font_size_subheading"
                        android:text="@string/label_choose_token"/>
                    <ImageView
                        android:id="@+id/iv_choose_coin_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_keyboard_arrow_right_black"/>
                    <TextView
                        android:id="@+id/tv_coin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_size_subheading"
                        android:textColor="@color/color_primary_text"
                        android:layout_toStartOf="@id/iv_choose_coin_arrow"
                        android:text="BRM (BrahmaOS)"/>
                    <ImageView
                        android:id="@+id/iv_coin_icon"
                        android:layout_toStartOf="@id/tv_coin_name"
                        android:layout_marginEnd="@dimen/space_smaller"
                        android:layout_width="@dimen/toolbar_icon_size"
                        android:layout_height="@dimen/toolbar_icon_size"
                        android:src="@drawable/icon_brm"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_normal"
                    android:paddingTop="@dimen/space_normal"
                    android:paddingBottom="@dimen/space_larger"
                    android:paddingStart="@dimen/space_normal"
                    android:paddingEnd="@dimen/space_normal"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/customEditTextLineColor"
                            android:layout_marginTop="@dimen/space_smaller"
                            app:hintTextAppearance="@style/customEditTextHint">
                            <EditText
                                android:id="@+id/et_receiver_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/prompt_receiver_address"
                                android:maxLines="2"
                                android:paddingEnd="@dimen/icon_normal_size"
                                android:textSize="@dimen/font_size_body"
                                android:inputType="text"/>
                        </android.support.design.widget.TextInputLayout>
                        <ImageView
                            android:id="@+id/iv_scan"
                            android:layout_width="@dimen/icon_normal_size"
                            android:layout_height="@dimen/icon_normal_size"
                            android:padding="10dp"
                            android:layout_marginBottom="@dimen/space_unit"
                            android:layout_gravity="end|bottom"
                            android:src="@drawable/ic_scan"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_smaller">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/customEditTextLineColor"
                            android:layout_marginTop="@dimen/space_smaller"
                            app:hintTextAppearance="@style/customEditTextHint">
                            <EditText
                                android:id="@+id/et_withdraw_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/prompt_withdraw_amount"
                                android:maxLines="1"
                                android:paddingEnd="@dimen/icon_normal_size"
                                android:textSize="@dimen/font_size_subtitle"
                                android:inputType="numberDecimal"/>
                        </android.support.design.widget.TextInputLayout>
                        <TextView
                            android:id="@+id/tv_amount_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:padding="10dp"
                            android:layout_marginBottom="@dimen/space_unit"
                            android:layout_gravity="end|bottom"
                            android:textSize="@dimen/font_size_subheading"
                            android:text="@string/prompt_amount_all"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_available_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:singleLine="true"
                        android:textSize="@dimen/font_size_body"
                        android:textColor="@color/color_hint_text"/>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/space_large"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_title_withdraw_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_body"
                            android:textColor="@color/color_secondary_text"
                            android:text="@string/prompt_fee"/>
                        <TextView
                            android:id="@+id/tv_withdraw_fee"
                            android:layout_marginTop="@dimen/space_small"
                            android:layout_below="@id/tv_title_withdraw_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_subtitle"
                            android:textColor="@color/color_primary_text"/>
                        <ImageView
                            android:id="@+id/iv_withdraw_fee_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_help_blue_24dp"/>
                        <TextView
                            android:id="@+id/tv_withdraw_fee_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_withdraw_fee_help"
                            android:layout_marginTop="@dimen/space_small"
                            android:layout_alignParentEnd="true"
                            android:textSize="@dimen/font_size_subheading"
                            android:textColor="@color/color_primary_text"
                            android:text="BRM"/>
                    </RelativeLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_withdraw_confirm"
                    style="@style/ButtonSingle"
                    android:layout_marginTop="@dimen/space_large"
                    android:layout_marginStart="@dimen/space_normal"
                    android:layout_marginEnd="@dimen/space_normal"
                    android:text="@string/action_next"/>
            </LinearLayout>
        </FrameLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>

