<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextAppearance="@style/ToolbarTitleText"
                app:title="@string/title_address_qrcode"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/master"
            android:layout_marginTop="@dimen/height_toolbar"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/color_transparent"
                android:layout_weight="0.75"
                android:layout_height="0dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginStart="@dimen/space_largest"
                android:layout_marginEnd="@dimen/space_largest">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:paddingTop="28dp"
                    android:orientation="vertical"
                    android:background="@drawable/btc_address_bg">
                    <TextView
                        android:id="@+id/tv_account_name"
                        android:layout_marginTop="@dimen/space_smaller"
                        android:textSize="@dimen/font_size_subtitle"
                        android:textColor="@color/color_primary_text"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/space_normal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/space_unit"
                            android:paddingBottom="@dimen/space_unit"
                            android:background="@drawable/btc_address_switch_bg"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_main_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/space_normal"
                                android:paddingEnd="@dimen/space_normal"
                                android:text="@string/btc_main_address"/>
                            <TextView
                                android:id="@+id/tv_child_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/space_normal"
                                android:paddingEnd="@dimen/space_normal"
                                android:text="@string/btc_child_address"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_address_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/space_unit"
                            android:paddingBottom="@dimen/space_unit"
                            android:paddingStart="@dimen/space_normal"
                            android:paddingEnd="@dimen/space_normal"
                            android:background="@drawable/btc_address_choose_bg"
                            android:orientation="horizontal"
                            android:textColor="@color/white"
                            android:text="@string/btc_main_address"/>
                    </FrameLayout>
                    <LinearLayout
                        android:id="@+id/layout_account_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_small"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_account_address"
                            android:textSize="@dimen/font_size_body"
                            android:textColor="@color/color_secondary_text"
                            android:layout_marginEnd="@dimen/space_smaller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="@dimen/icon_small_size"
                            android:layout_height="@dimen/icon_small_size"
                            android:src="@drawable/ic_content_copy"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_small"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.25"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.5"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:orientation="vertical"
                                android:background="@color/color_divider"/>

                            <TextView
                                android:id="@+id/tv_btc_receive_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_size_subheading"
                                android:textColor="@color/color_primary_text"
                                android:layout_marginTop="@dimen/space_normal"
                                android:textAlignment="center"
                                android:text="@string/transfer_btc"/>

                            <ImageView
                                android:id="@+id/iv_address_code"
                                android:layout_marginTop="@dimen/space_normal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tv_input_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_size_subheading"
                                android:textColor="@color/master"
                                android:layout_marginTop="@dimen/space_smaller"
                                android:layout_marginBottom="@dimen/space_large"
                                android:paddingTop="@dimen/space_smaller"
                                android:paddingBottom="@dimen/space_smaller"
                                android:textAlignment="center"
                                android:text="@string/enter_btc_amount"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.25"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_account_avatar"
                    android:layout_width="@dimen/icon_large_size"
                    android:layout_height="@dimen/icon_large_size"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_bg_account_icon_white"
                    android:padding="@dimen/space_smaller"
                    android:elevation="4dp"
                    android:src="@drawable/fruit_icons_00"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>

